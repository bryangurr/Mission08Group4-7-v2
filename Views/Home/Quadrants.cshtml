@{
}
@model List<TaskClass>

<div class="container">
    <div class="row">
        <div class="col">
            <h1>Stephen Covey's Time Management Matrix</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-2"></div>
		<div class="col"><b>Urgent</b></div>
		<div class="col"><b>Not Urgent</b></div>
    </div>
    <div class="row">
		<div class="col-2 d-flex align-items-center justify-content-center text-rotate"><b>Important</b></div>
        <div class="col">
			<h2><b>Quadrant 1</b></h2>
            <br />
            @foreach (var t in Model)
            {
            if (t.Quadrant == 1)
            {
                    <p>Task: @t.TaskName, Due Date: @t.DueDate, Category: @t.Category
                        <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@t.TaskId">Edit</a>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@t.TaskId">Delete</a>
                    </p>

            }
            }
         </div>
        <div class="col">
			<h2><b>Quadrant 2</b></h2>
            <br />
            @foreach (var t in Model)
            {
                if (t.Quadrant == 2)
                {
                    <p>Task: @t.TaskName, Due Date: @t.DueDate, Category: @t.Category</p>
                }
            }
        </div>
    </div>
    <div class="row">
		<div class="col-2 d-flex align-items-center justify-content-center text-rotate"><b>Not Important</b></div>
        <div class="col">
			<h2><b>Quadrant 3</b></h2>
            <br />
            @foreach (var t in Model)
            {
                if (t.Quadrant == 3)
                {
                    <p>Task: @t.TaskName, Due Date: @t.DueDate, Category: @t.Category</p>
                }
            }
        </div>
        <div class="col">
			<h2><b>Quadrant 4</b></h2>
            <br />
            @foreach (var t in Model)
            {
                if (t.Quadrant == 4)
                {
                    <p>Task: @t.TaskName, Due Date: @t.DueDate, Category: @t.Category</p>
                }
            }
        </div>
    </div>
</div>