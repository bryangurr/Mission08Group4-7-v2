            {
                if (t.Quadrant == 3)
                {
                    <p>
                        Task: @t.TaskName, Due Date: @t.DueDate, Category: @t.Category?.Category
                        <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@t.TaskId">Edit</a>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@t.TaskId">Delete</a>
                    </p>
                }
            }
        </div>
        <div class="col">
            <b>Quadrant 4</b>
            <br />
